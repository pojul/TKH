/* bh_step/pages/checkOrderAssemble/checkOrderAssemble.wxss */
.top-box{
  background-color: #fff;
  padding: 20rpx;
}

.top-title{
  color: #333333;
  font-size: 28rpx;
}

.content{
  display: flex;
}

.pic{
  width: 130rpx;
  height: 130rpx;
}

.content-text{
  width: 560rpx;
  margin-left: 30rpx;
  justify-content: space-between;
}

.content-title{
  font-size: 28rpx;
  height: 90rpx;
  overflow: hidden;
  color: #000;
}

.content-note{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.left-people{
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.photos{
  display: flex;
  flex-wrap: wrap;
  max-width: 700rpx;
}

.photo{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50rpx;
  margin-right: 15rpx;
}

.add-user{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50rpx;
}

.colonel{
  background-color: #f00;
  border-radius: 50rpx;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  margin-top: -20rpx;
  position: absolute;
  width: 60rpx;
  margin-left: 5rpx;
}

.invite-users{
  width: 260rpx;
  margin-top: 30rpx;
}

.play-way-box{
  background-color: #fff;
  margin-top: 20rpx;
}

.play-way-note{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}

.paly-way-content{
  display: flex;
  margin-left: 100rpx;
  padding-bottom: 20rpx;
  margin-bottom: 160rpx;
}

.paly-way-icon{
  width: 90rpx;
  height: 90rpx;
  margin-left: 20rpx;
  margin-bottom: 5rpx;
}

.line-black{
  width: 68rpx;
  height: 2rpx;
  background-color: #999999;
  margin-left: 20rpx;
  margin-top: 45rpx;
}

.paly-way-item{
  color: #999;
  font-size: 22rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.check-order{
  position: fixed;
  bottom: 0rpx;
  background-color: #FF1E5C;
  width: 650rpx;
  margin-left: 50rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 8rpx;
  padding-top: 8rpx;
  padding-bottom: 5rpx;
}

.assemble-rules{
  position: fixed;
  top: 0rpx;
  display: flex;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}

.assemble-rules-content-box{
  display: flex;
  flex-direction: column;
  width: 86%;
  height: 60%;
  margin-left: 7%;
  align-self: center;
}

.assemble-rules-content{
  width: 100%;
  height: 90%;
  display: flex;
  flex-direction: column;
  align-items: center; 
  background-color: #fff;
  border-radius: 4%;
  font-size: 28rpx;
  padding: 10rpx;
  overflow: scroll;
}

.assemble-rules-title{
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  padding: 10rpx;
}

.close-assemble-rules{
  width: 100%;
  margin-top: 2%;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}
