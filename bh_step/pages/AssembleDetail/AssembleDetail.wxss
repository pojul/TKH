/* bh_step/pages/AssembleDetail/AssembleDetail.wxss */ 

.container {
    margin-bottom: 136rpx;
}
.coin{
    width:44rpx;
    height:44rpx;
}

.pic-container {
	position: relative;
  /* width: 720rpx; */
  margin: 0 auto 0;
  height: 90rpx;
  color: #fff;
}


.pic-container-pic {
    width: 100%;
    height: 100%;
}

.pic-container-content {
    position: absolute;
    top: 20rpx;
    left: 18rpx;
    font-size: 32rpx;
    display: flex;
    align-items: center;
}
.pic-container-right {
    position: absolute;
    top:32rpx;
    right:18rpx;
    font-size:20rpx;
    color:#ff3b30;
}

.swiper-box {
    width: 100%;
    height: 750rpx;
}

.swiper-box .slide-image {
    width: 100%;
    height: 100%;
}

.content-box{
  background-color: #fff;
}

.good-detail-box{
  padding: 20rpx;
}

.good-detail-title{
  font-size: 28rpx;
  color: #333333;
}

.good-detail-content{
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 22rpx;
  margin-top: 5rpx;
}

.line{
  width: 750rpx;
  height: 1rpx;
  background-color: #f2f2f2;
}

.play-way-note{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}

.paly-way-content{
  display: flex;
  margin-left: 100rpx;
  padding-bottom: 20rpx;
}

.paly-way-icon{
  width: 90rpx;
  height: 90rpx;
  margin-left: 20rpx;
  margin-bottom: 5rpx;
}

.line-black{
  width: 68rpx;
  height: 2rpx;
  background-color: #999999;
  margin-left: 20rpx;
  margin-top: 45rpx;
}

.paly-way-item{
  color: #999;
  font-size: 22rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.check-order{
  position: fixed;
  bottom: 0rpx;
  background-color: #FF1E5C;
  width: 650rpx;
  margin-left: 50rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 8rpx;
  padding-top: 8rpx;
  padding-bottom: 5rpx;
}

.detail-html{
  background-color: #fff;
  margin-top: 20rpx;
  padding-bottom: 90rpx;
  font-size: 28rpx;
}


.wxParse-img{
  display: flex;
}

.assemble-rules{
  position: fixed;
  top: 0rpx;
  display: flex;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
}

.assemble-rules-content-box{
  display: flex;
  flex-direction: column;
  width: 86%;
  height: 60%;
  margin-left: 7%;
  align-self: center;
}

.assemble-rules-content{
  width: 100%;
  height: 90%;
  display: flex;
  flex-direction: column;
  align-items: center; 
  background-color: #fff;
  border-radius: 4%;
  font-size: 28rpx;
  padding: 10rpx;
  overflow: scroll;
}

.assemble-rules-title{
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  padding: 10rpx;
}

.close-assemble-rules{
  width: 100%;
  margin-top: 2%;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}