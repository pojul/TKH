.step_info_container {
    width: 690rpx;
    margin: 10rpx auto;
    background: #fff;
    box-shadow: 0 4rpx 16rpx 0 rgba(220,220,220,0.50);
    padding: 20rpx 0;
    position: relative;
    box-sizing: border-box;
}

.container {
    width: 100%;
    position: relative;
    overflow-x: hidden;
}

.canvas {
    position: absolute;
    right: -110%;
    top: 0;
}

.diary_bg {
    display: block;
    margin: 0 auto;
    width: 655rpx;
    height: 622rpx;
    background: #f0f0f0;
}

.user_info {
    position: absolute;
    bottom: 204rpx;
    left: 46rpx;
    display: -webkit-box;
    -webkit-box-align: center;
}

.user_icon {
    display: block;
    width: 96rpx;
    height: 96rpx;
    border-radius: 100px;
    margin-right: 20rpx;
    border: solid 1px #ffffff;
}

.user_name {
    font-size: 36rpx;
    color: #fff;
    font-weight: bold;
    width: 300rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.date {
    font-size: 26rpx;
    color: rgba(255,255,255,0.80);
    margin-top: 6rpx;
}

.qr_code_container {
    padding: 20rpx 50rpx 0;
    display: -webkit-box;
    -webkit-box-align: center;
}

.qr_code_img {
    width: 124rpx;
    height: 124rpx;
    margin-right: 23rpx;
}

.qr_code_tip {
    font-size: 24rpx;
    color: #666;
}

.qr_code_tip:nth-last-child(1) {
    margin-top: 20rpx;
}

.see_next_btn {
    width: fit-content;
    text-align: center;
    display: block;
    text-decoration: underline;
    margin: 0 auto;
    padding: 30rpx 0;
    font-size: 26rpx;
    color: #26bcc5;
}

.save_img_btn {
    width: 378rpx;
    height: 81rpx;
    line-height: 81rpx;
    text-align: center;
    background-image: linear-gradient(90deg,#1dd49e 2%,#26bcc5 97%);
    border-radius: 100px;
    margin: 0 auto;
    font-size: 32rpx;
    color: #fff;
    position: relative;
}

.save_img_btn::before {
    content: '';
    display: block;
    height: 70rpx;
    width: 352rpx;
    position: absolute;
    bottom: 0;
    background: #25BFC1;
    box-shadow: 0 0 24rpx 0 rgba(37,191,193,1);
    border-radius: 100px;
    left: 50%;
    z-index: -1;
    transform: translateX(-50%);
}

.bottom_tip {
    font-size: 24rpx;
    color: #666;
    text-align: center;
    margin-top: 32rpx;
    padding-bottom: 10rpx;
}

.step_num {
    position: absolute;
    font-size: 70rpx;
    color: #fff;
}

@media (max-height:600px) {
    .see_next_btn {
        padding: 20rpx 0;
    }

    .bottom_tip {
        margin-top: 20rpx;
    }
}