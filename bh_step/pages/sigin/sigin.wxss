}

.ad-content-box {
    width: 100%;
    height: 300rpx;
    background: #ffffff;
    border-radius: 12rpx;
    text-align: center;
}

.ad-area-title-box {
    padding-top: 18rpx;
    display: -webkit-flex;
    align-items: center;
    justify-content: center;
}

.ad-area-title-1 {
    opacity: 0.8;
    font-family: PingFangSC-Semibold;
    font-size: 30rpx;
    color: #333333;
    text-align: center;
    height: 42rpx;
    margin-right: 10rpx;
}

.area-arrow {
    width: 18rpx;
    height: 20rpx;
}

.ad-banner {
    margin-top: 16rpx;
    width: 622rpx;
    height: 207rpx;
    background: orange;
}