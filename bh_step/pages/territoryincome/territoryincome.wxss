/* bh_step/pages/territoryincome/territoryincome.wxss */
page{
  background-color: #fff;
}

.loc-box{
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}

.loc-icon{
  width: 25rpx;
  height: 25rpx;
}

.loc-text{
  font-size: 28rpx;
  color: #000;
  margin-left: 15rpx;
}

.total-income-box{
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 5rpx;
  margin-bottom: 20rpx;
}

.total-income-view{
  display: flex;
  align-items: flex-end;
}

.total-income-note{
  font-size: 20rpx;
  margin-bottom: 10rpx;
}

.total-income{
  font-size: 42rpx;
  color: #f00;
  margin-left: 10rpx;
  margin-right: 15rpx;
}

.line{
  width: 100%;
  height: 1rpx;
  background-color: #E9E9E9;
}

.item-box{
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.item-title{
  width: 20%;
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  padding: 5rpx;
}

.item-title-center{
  width: 20%;
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  margin-left: 20%;
  margin-right: 20%;
  padding: 5rpx;
}

.items-box{
  display: flex;
  flex-direction: column;
}

.item{
  width: 20%;
  font-size: 28rpx;
  color: #000;
  text-align: center;
}

.item-center{
  width: 20%;
  font-size: 28rpx;
  color: #000;
  text-align: center;
  margin-left: 20%;
  margin-right: 20%;
}

.no-more{
  text-align: center;
  color: #999999;
  font-size: 22rpx;
  margin-top: 28rpx;
  padding-bottom: 50rpx;
}