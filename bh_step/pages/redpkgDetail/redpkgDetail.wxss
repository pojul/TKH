/* bh_step/pages/redpkgDetail/redpkgDetail.wxss */
Page {
  background: #f5f5f5;
  height: 100%;
}

.topbg{
  width: 100%;
  height: 120rpx;
}

.top-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -65rpx;
}

.photo{
  width: 95rpx;
  height: 95rpx;
  border-radius: 60rpx;
  border: 5rpx solid #fff;
  box-shadow: 1rpx 1rpx 2rpx 1rpx #ddd;
}

.user-name{
  font-size: 26rpx;
  color: #333333;
  margin-top: 18rpx;
  font-weight: bold;
  max-width: 180rpx;
  white-space: nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  -o-text-overflow:ellipsis;
}

.user-name-box{
  display: flex;
}

.user-name-note{
  font-size: 26rpx;
  color: #333333;
  margin-top: 18rpx;
  font-weight: bold;
}

.redpkg-status{
  margin-top: 15rpx;
  font-size: 38rpx;
  color: #999999;
}

.more-interested{
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #334FFF;
}

.hasrec-num-box{
  background-color: #fff;
  padding: 25rpx;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 8rpx;
  margin-top: 50rpx;
}

.recuser{
  display: flex;
  padding-left: 25rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  margin-bottom: 1px;
  padding-right: 25rpx;
  justify-content: space-between;
  background-color: #fff;
}

.left-box{
  display: flex;
  align-items: center;
}

.photo{
  width: 76rpx;
  height: 76rpx;
  border-radius: 80rpx;
}

.user-text-box{
  margin-left: 10rpx;
}

.name{
  color: #000;
  font-size: 28rpx;
  font-weight: bold;
}

.time{
  color: #999;
  font-size: 24rpx;
  margin-top: 2rpx;
}

.money{
  font-size: 28rpx;
  color: #000;
}

