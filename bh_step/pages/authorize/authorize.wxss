/* bh_step/pages/authorize/authorize.wxss */
page{
  background-color: #fff;
}

.content-box{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.icon{
  width: 110rpx;
  height: 110rpx;
  align-self: center;
  margin-top: 150rpx;
}

.title{
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
  align-self: center;
  margin-top: 10rpx;
}

.note-title{
  font-size: 28rpx;
  margin-left: 30rpx;
  margin-top: 150rpx;
  color: #000;
  font-weight: bold;
}

.line{
  width: 100%;
  height: 1rpx;
  background-color: #EEEBEB;
  margin-top: 15rpx;
  margin-bottom: 25rpx;
}

.note-box{
  display: flex;
  align-items: center;
  margin-left: 35rpx;
}

.point{
  width: 10rpx;
  height: 10rpx;
  border-radius: 20rpx;
  background-color: #666666;
}

.note{
  font-size: 25rpx;
  color: #666666;
  margin-left: 20rpx;
}

.allow{
  color: #fff;
  background-color: #00D779;
  width: 580rpx;
  padding-top: 5rpx;
  padding-bottom: 3rpx;
  align-self: center;
  font-size: 28rpx;
  border-radius: 100rpx;
  text-align: center;
  margin-top: 150rpx;
}