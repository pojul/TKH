    font-size: 24rpx;
    line-height: 1.2;
    position: absolute;
    bottom: 75rpx;
}

.text-orangered {
    text-decoration: line-through;
    font-size: 22rpx;
    color: #999999;
    margin-left: 18rpx;
}

.media-box__bottom {
    position: absolute;
    bottom: 18rpx;
    left: 18rpx;
}

.bottom_left {
    font-size: 26rpx;
    color: #333333;
    flex: 1.5;
    padding-bottom: 1rpx;
}

.text_coin {
    font-size: 40rpx;
    color: #26BCC5;
    font-family: 'DIN Alternate';
}

.attract {
    color: #26BCC5;
    font-family: 'DIN Alternate';
    font-size: 40rpx;
