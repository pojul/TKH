.panel {
    position: relative;
    width: 336rpx;
    float: left;
    margin-bottom: 18rpx;
    margin-right: 18rpx;
    height: 536rpx;
    background: #FFFFFF;
    border: 1rpx solid #E0E0E0;
    box-shadow: 0 0 24rpx 0 rgba(0,0,0,0.10);
    border-radius: 10rpx;
}

.panelL {
    position: relative;
    width: 700rpx;
    float: left;
    margin-bottom: 18rpx;
    margin-left: 30rpx;
}

.panelnone {
    position: relative;
    width: 0rpx;
    height: 0rpx;
    float: left;
    opacity: 0;
}

.img {
    width: 100%;
    height: 171rpx;
}

view.panel:nth-child(even) {
    margin-right: 0rpx;
}

view.panel:nth-child(odd) {
    margin-left: 30rpx;
}

.media-box__hd {
    height: 330rpx;
    line-height: 120rpx;
    text-align: center;
    position: relative;
}

.panel-img-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}

.panel-img {
    width: 100%;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
}

.mask {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
    background-color: #DC9995;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}

.maskTitle {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 304rpx;
    height: 60rpx;
    margin-left: -152rpx;
    margin-top: -30rpx;
    animation: mymoveTitle 1.8s ease infinite alternate;
}

@-webkit-keyframes mymoveTitle {
    0% {
        top: 50%;
        transform: scale(1,1);
    }

    29% {
        top: 50%;
        transform: scale(1,1);
    }

    34% {
        top: 50%;
        transform: scale(1,1);
    }

    45% {
        top: 20%;
        transform: scale(0.9,0.9);
    }

    100% {
        top: 20%;
        transform: scale(0.9,0.9);
    }
}

@keyframes mymoveTitle {
    0% {
        top: 50%;
        transform: scale(1,1);
    }

    29% {
        top: 50%;
        transform: scale(1,1);
    }

    34% {
        top: 50%;
        transform: scale(1,1);
    }

    45% {
        top: 20%;
        transform: scale(0.9,0.9);
    }

    100% {
        top: 20%;
        transform: scale(0.9,0.9);
    }
}

.maskImage {
    width: 306rpx;
    height: 166rpx;
    position: absolute;
    top: 100%;
    left: 50%;
    margin-left: -153rpx;
    animation: mymoveImage 1.8s ease infinite alternate;
}

@-webkit-keyframes mymoveImage {
    0% {
        top: 100%;
    }

    29% {
        top: 100%;
    }

    45% {
        top: 40%;
    }

    45% {
        top: 40%;
    }

    100% {
        top: 40%;
    }
}

@keyframes mymoveImage {
    0% {
        top: 100%;
    }

    29% {
        top: 100%;
    }

    45% {
        top: 40%;
    }

    45% {
        top: 40%;
    }

    100% {
        top: 40%;
    }
}

.maskPage1 {
    position: absolute;
    top: 0;
    left: 33.3%;
    width: 33.3%;
    height: 33.3%;
}

.maskPage2 {
    position: absolute;
    top: 33.3%;
    left: 66.6%;
    width: 33.3%;
    height: 33.3%;
    transform: rotate(90deg);
}

.maskPage3 {
    position: absolute;
    top: 66.6%;
    left: 33.3%;
    width: 33.3%;
    height: 33.3%;
    transform: rotate(180deg);
}

.maskPage4 {
    position: absolute;
    top: 33.3%;
    left: 0%;
    width: 33.3%;
    height: 33.3%;
    transform: rotate(-90deg);
}

.rotate-block {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
    background-color: #f0f0f0;
}

.move {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    animation: moveLeft 8s ease infinite;
}

.movePage1 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.movePage2 {
    position: absolute;
    top: 0;
    left: 100%;
    width: 100%;
    height: 100%;
}

@-webkit-keyframes moveLeft {
    0% {
        left: 0%;
    }

    3% {
        left: -100%;
    }

    50% {
        left: -100%;
    }

    53% {
        left: 0%;
    }

    100% {
        left: 0%;
    }
}

@keyframes moveLeft {
    0% {
        left: 0%;
    }

    3% {
        left: -100%;
    }

    50% {
        left: -100%;
    }

    53% {
        left: 0%;
    }

    100% {
        left: 0%;
    }
}

